{% extends 'base.html.twig' %}

{% block title %}Réinitialisation de votre mot de passe{% endblock %}

{% block body %}

    <div class="container my-3">
        <div class="row">
            <div class="col">
                {% for flash_error in app.flashes('reset_password_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}
                <h1 class="text-center">Réinitialiser votre mot de passe</h1>

                {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
                <div>
                    <small>
                        Saisissez votre E-mail de connexion pour réinitialiser votre mot de passe.
                    </small>
                </div>

                <button class="btn btn-warning my-4">Envoyer
                </button>
                {{ form_end(requestForm) }}
            </div>
        </div>
    </div>



{% endblock %}
