{# header #}
<header
	class=" container d-flex  align-items-center justify-content-center justify-content-md-around py-3 mb-4 border-bottom">

	{#logo yadelair #}
	<a href="{{ path('app_home') }}">
	<img src="{{ asset('images/logo.png') }}" alt="logo" style="width:150px; height:150px ">
	</a>

	<ul class="nav col-12 col-md-auto mb-1 justify-content-center mb-md-0">
		<li class="nav-item">
			<a class="nav-link px-2" href="{{ path ('app_home') }}">
				<svg  xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="fbca2b" class="bi bi-house-fill" viewbox="0 0 16 16">
					<path fill-rule="evenodd" d="m8 3.293 6 6V13.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5V9.293l6-6zm5-.793V6l-2-2V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5z"/>
					<path fill-rule="evenodd" d="M7.293 1.5a1 1 0 0 1 1.414 0l6.647 6.646a.5.5 0 0 1-.708.708L8 2.207 1.354 8.854a.5.5 0 1 1-.708-.708L7.293 1.5z"/>
				</svg>
			</a>
		</li>
		<li>
			<a href="{{ path ('app_actuality') }}" class="nav-link px-2 link-dark">Actualités</a>
		</li>
		<li>
			<a href="{{ path ('app_dossier') }}" class="nav-link px-2 link-dark">Dossier</a>
		</li>
		<li>
			<a href="{{ path ('app_voyage') }}" class="nav-link px-2 link-dark">Voyage</a>
		</li>
		<li>
			<a href="{{ path ('app_presdechezvous') }}" class="nav-link px-2 link-dark">Près de chez vous</a>
		</li>
		<li>
			<a href="{{ path ('app_videos') }}" class="nav-link px-2 link-dark">Vidéo</a>
		</li>
		<li>
			<a href="{{ path ('app_portrait') }}" class="nav-link px-2 link-dark">Portrait</a>
		</li>
		<li>
			<a href="{{ path ('app_initiative') }}" class="nav-link px-2 link-dark">Initiative</a>
		</li>
		<li>
			<a href="{{ path ('app_bien_etre') }}" class="nav-link px-2 link-dark">Bien-être</a>
		</li>

	</ul>
	
	<ul class="nav col-12 col-md-auto mb-4 justify-content-center mb-md-2 my-2">
		{% if app.user %}
			<li class="nav-item">
				<a type="button" class="btn btn-warning mx-2"  href="#">Mon compte</a>
			</li>
			<li class="nav-item">
				<a type="button" class="btn btn-warning mx-2"  href="{{ path ('app_profile') }}">Mon Profile</a>
			</li>
			<li class="nav-item">
				<a type="button" class="btn btn-warning mx-2" href="{{ path ('app_logout') }}">Me déconnecter</a>
			</li>
		{% else %}
			<li class="nav-item">
				<a type="button" class="btn btn-warning mx-2" href="{{ path('app_register') }}" >S'inscrire</a>
			</li>
			<li class="nav-item">
				<a type="button" class="btn btn-warning  mx-2" href="{{ path('app_login') }}" >Se connecter</a>
			</li>
		{% endif %}
	</ul>
		
		
	
</header>
